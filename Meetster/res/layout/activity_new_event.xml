<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.98" >
      
        <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/briefcase"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/brieflycase"
            android:textOn="√"
            android:textOff=""
            android:textSize="30dp"
            android:textColor="#00FF00"
            android:contentDescription="@string/desc3"
            android:onClick="setCategory" />
        
                
        <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/knife"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/food_icon"
            android:textOn="√"
            android:textOff=""
            android:textSize="30dp"
            android:textColor="#00FF00"
            android:contentDescription="@string/desc2"
            android:onClick="setCategory" />
        
        <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
        
        <ToggleButton
            android:id="@+id/tv_icon"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_icon_entertainment"
            android:textOn="√"
            android:textOff=""
            android:textSize="30dp"
            android:textColor="#00FF00"
            android:contentDescription="@string/desc"
            android:onClick="setCategory" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/basketball"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/college_basketball"
            android:textOn="√"
            android:textOff=""
            android:textSize="30dp"
            android:textColor="#00FF00"
            android:contentDescription="@string/basketball"
            android:onClick="setCategory" />
        
        <View
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/misc"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/misc"
            android:textOn="√"
            android:textOff=""
            android:textSize="30dp"
            android:textColor="#00FF00"
            android:contentDescription="@string/desc4"
            android:onClick="setCategory" />

        <View
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" />
        
         </LinearLayout>
         
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
         
      <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />

      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
      
      <EditText
          android:id="@+id/titleofEvent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="20"
          android:hint="@string/titleofEvent"
          android:inputType="text" >
       
      </EditText>
      
		<View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
      
      <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#808080" />
	
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
        <EditText
            android:id="@+id/locationtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/location"
            android:inputType="text" >
        </EditText>
    
	<View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>
    
    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>
    
    <Button
        android:id="@+id/timedatebutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="When?"
        android:onClick="showStartTimeDialog" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>
    
    <Button
        android:id="@+id/particfriends"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/particfriends"
        android:enabled="false" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>
    
    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />
	<View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>
	
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/createeventbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/create"
        android:onClick="createEvent" />

</LinearLayout>
