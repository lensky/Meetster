<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/categories"
            android:layout_below="@+id/categories"
            android:layout_marginTop="95dp"
            android:text="@string/timeframe"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/event_header"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="48dp"
            android:text="@string/event_category"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/event_header"
            android:text="@string/create" />

        <ImageButton
            android:id="@+id/basketball"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignTop="@+id/tv_icon"
            android:background="@drawable/college_basketball"
            android:contentDescription="@string/basketball" />

        <ImageButton
            android:id="@+id/briefcase"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignTop="@+id/basketball"
            android:layout_toRightOf="@+id/participant"
            android:background="@drawable/brieflycase"
            android:contentDescription="@string/desc3" />

        <TextView
            android:id="@+id/event_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/categories"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="@string/event_header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="serif" />

        <ImageButton
            android:id="@+id/tv_icon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_below="@+id/categories"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/tv_icon_entertainment"
            android:contentDescription="@string/desc" />

        <ImageButton
            android:id="@+id/knife"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignTop="@+id/tv_icon"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/tv_icon"
            android:background="@drawable/foodknife"
            android:contentDescription="@string/desc2" />

        <ImageButton
            android:id="@+id/misc"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignRight="@+id/button1"
            android:layout_alignTop="@+id/knife"
            android:layout_marginRight="15dp"
            android:background="@drawable/misc"
            android:contentDescription="@string/desc4" />

        <TextView
            android:id="@+id/participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="50dp"
            android:text="@string/participants"
            android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>