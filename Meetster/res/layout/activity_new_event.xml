<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:layout_marginTop="25dip"
        android:layout_marginBottom="@string/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        
        <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

        <ImageButton
            android:id="@+id/misc"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_weight="0"
            android:background="@drawable/misc"
            android:contentDescription="@string/desc4" />
        
        <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />
        
       

        <ImageButton
            android:id="@+id/briefcase"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_weight="0"
            android:background="@drawable/brieflycase"
            android:contentDescription="@string/desc3" />
        
        <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />
        
        <ImageButton
            android:id="@+id/tv_icon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_weight="0"
            android:background="@drawable/tv_icon_entertainment"
            android:contentDescription="@string/desc" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/basketball"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_weight="0"
            android:background="@drawable/college_basketball"
            android:contentDescription="@string/basketball" />
        
        <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

        <ImageButton
            android:id="@+id/knife"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_weight="0"
            android:background="@drawable/foodknife"
            android:contentDescription="@string/desc2" />
        <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />
        
         </LinearLayout>
         
      <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#808080" />

      <EditText
          android:id="@+id/titleofEvent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@string/margin"
          android:layout_marginBottom="@string/margin"
          android:ems="10"
          android:hint="@string/titleofEvent"
          android:inputType="text" >

       
      </EditText>

      <View
          android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:background="#808080" />

    <Button
        android:id="@+id/timedatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@string/margin"
        android:layout_marginBottom="@string/margin"
        android:text="@string/selecttimedate" />

  

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#808080" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/locationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@string/margin"
            android:layout_marginTop="@string/margin"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/location"
            android:inputType="text" >

     
        </EditText>

        <TextView
            android:id="@+id/linktomap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@string/margin"
            android:layout_marginBottom="@string/margin"
            android:text="@string/linktext"
            android:textColor="#0465AD" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#808080" />

    <Button
        android:id="@+id/particfriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@string/margin"
        android:layout_marginBottom="@string/margin"
        android:ems="8"
        android:text="@string/particfriends" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#808080" />

    <Button
        android:layout_marginTop="@string/margin"
        android:id="@+id/createeventbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create" />

</LinearLayout>