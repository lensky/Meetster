<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/createbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/categories"
        android:text="@string/create" />

    <EditText
        android:id="@+id/locationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createbutton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/location" />

    <TextView
        android:id="@+id/timeofEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/locationtext"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@+id/createbutton"
        android:text="@string/specifyTime"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/particfriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeofEvent"
        android:layout_alignLeft="@+id/timeofEvent"
        android:layout_marginBottom="20dp"
        android:ems="8"
        android:text="@string/particfriends" />

    <EditText
        android:id="@+id/titleofEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/titleofEvent" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleofEvent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:text="@string/event_category"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/misc"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignLeft="@+id/categories"
        android:layout_alignTop="@+id/basketball"
        android:background="@drawable/misc"
        android:contentDescription="@string/desc4" />

    <ImageButton
        android:id="@+id/tv_icon"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/categories"
        android:layout_marginRight="34dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/tv_icon_entertainment"
        android:contentDescription="@string/desc" />

    <ImageButton
        android:id="@+id/basketball"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignTop="@+id/tv_icon"
        android:layout_toRightOf="@+id/createbutton"
        android:background="@drawable/college_basketball"
        android:contentDescription="@string/basketball" />

    <ImageButton
        android:id="@+id/knife"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignTop="@+id/basketball"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/briefcase"
        android:background="@drawable/foodknife"
        android:contentDescription="@string/desc2" />

    <ImageButton
        android:id="@+id/briefcase"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignTop="@+id/misc"
        android:layout_toRightOf="@+id/categories"
        android:background="@drawable/brieflycase"
        android:contentDescription="@string/desc3" />

</RelativeLayout>