<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
        <TextView
        android:id="@+id/event_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="@string/event_header"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/categories"
            android:layout_below="@+id/categories"
            android:layout_marginTop="95dp"
            android:text="@string/timeframe"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/event_header"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="48dp"
            android:text="@string/event_category"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:text="@string/participants"
            android:textAppearance="?android:attr/textAppearanceSmall" />

         <ImageButton
             android:id="@+id/basketball"
             android:layout_width="15dip"
             android:layout_height="15dip"
             android:layout_alignLeft="@+id/categories"
             android:layout_below="@+id/categories"
             android:contentDescription="@string/basketball"
             android:background="@drawable/college_basketball" />
        <Button
            android:id="@+id/createeventbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/event_header"
            android:text="@string/create" />

        <ImageButton
            android:id="@+id/tv_icon"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignTop="@+id/basketball"
            android:background="@drawable/tv_icon_entertainment"
            android:contentDescription="@string/desc" />

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_height="wrap_content"
			android:layout_weight=".33"
			android:layout_width="0dip"
			android:textSize="12sp"
            android:layout_alignTop="@+id/tv_icon"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/timedatebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginTop="19dp"
            android:text="@string/selecttimedate" />

</RelativeLayout>